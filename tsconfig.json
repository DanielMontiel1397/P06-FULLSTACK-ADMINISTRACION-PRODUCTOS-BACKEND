{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ESNext"],
        "target": "esnext",
        "moduleResolution": "nodenext",
        "module": "nodenext",
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "types": ["node","jest"]
    },
    "include": ["src/**/*"],
    "ts-node": {
        "files": true
    },
    "exclude": ["src/**/*.test.ts"]
}